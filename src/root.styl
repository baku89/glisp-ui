@import './reset.styl'
@import './common.styl'

glisp-ui-root()
	// Reset styles
	nested-reset()

	&, *, ::after, ::before
		box-sizing border-box

	// Common styles
	color base16('05')

	h1, h2, h3
		font-heading()

	h1
		font-size 2em
		margin-block-start 0.67em
		margin-block-end 0.67em
		margin-inline-start 0
		margin-inline-end 0

	p
		margin-block-start 1em
		margin-block-end 1em
		margin-inline-start 0
		margin-inline-end 0

	ul, ol
		list-style none

	a
		color base16('0D')
