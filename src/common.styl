font-monospace()
	font-family 'Fira Code', monospace
	font-variant-ligatures contextual

font-heading()
	font-family monotype-grotesque, sans-serif

font-ui()
	font-family -apple-system, system-ui, 'system-ui', Helvetica, Arial, sans-serif, 'Apple Color Emoji'

font-numeric()
	font-ui()
	font-variant-numeric tabular-nums

input-transition($prop = all)
	transition $prop 0.1s ease

base16(name, opacity = 1)
	varName = '--base' + name

	if (name == 'accent')
		varName = '--base07'

	if (opacity == 1)
		unquote('rgb(var(' + varName + '))')
	else
		unquote('rgba(var(' + varName + '), ' + opacity + ')')

input()
	height var(--input-height)
	border 1px solid transparent
	border-radius var(--input-border-radius)
	background base16('01')
	color base16('06')
	cursor col-resize
	input-transition(border-color)
	font-numeric()

	&:hover, &:focus, &:focus-within
		border-color base16('accent')
		color base16('06')

	&:focus.invalid
		border-color base16('08')
		box-shadow 0 0 0 1px base16('08')

	&:focus
		box-shadow 0 0 0 1px base16('accent')